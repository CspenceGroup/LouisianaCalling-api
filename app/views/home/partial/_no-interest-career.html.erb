<div class="career-shortcut__container career-carousel-container no-interest-container">
  <div class="career-shortcut__head career-carousel-head no-interest-head">
    <div class="career-shortcut__head--pull-left">
      <div class="career-head-left">
        <div class="career-flames">
          <% career.demand.to_i.times do |time| %>
            <i class="icon i-red-flame"></i>
          <% end %>
        </div>
        <a href="<%=career_detail_path(career.slug)%>" class="career-info-title" title="<%=career.title%>">
          <%= career.title %>
        </a>
      </div>
    </div>
    <div class="career-shortcut__head--pull-right no-interest-pull-right">
      <a class="career-shortcut__btn-more" href="<%=career_detail_path(career.slug)%>">
        <%= image_tag asset_path("tell-me-more.png"), alt: "tell me more" %>
      </a>
      <div class="career-shortcut__salary">
        <p>$<%= number_with_delimiter(career.salary_min, :delimiter => ',') %> - $<%= number_with_delimiter(career.salary_max, :delimiter => ',') %></p>
        <div class="icon i-career-salary i-career-salary-carousel"></div>
      </div>
    </div>
  </div>
</div>