<div class="career-shortcut__container career-carousel-container">
  <div class="career-shortcut__head career-carousel-head">
    <div class="career-shortcut__head--pull-left">
      <div class="career-head-left">
        <div class="career-flames">
          <% career.demand.to_i.times do |time| %>
            <i class="icon i-red-flame"></i>
          <% end %>
        </div>
        <a href="<%=career_detail_path(career.slug)%>" class="career-info-title" title="<%=career.title%>">
          <%= career.title %>
        </a>
      </div>
    </div>
    <div class="career-shortcut__head--pull-right">
      <a class="career-shortcut__btn-more" href="<%=career_detail_path(career.slug)%>">
        <div class="btn-tell-me-more"></div>
      </a>
      <div class="career-shortcut__salary">
        <i class="icon i-career-salary i-career-salary-carousel"></i>
        <p>$<%= number_with_delimiter(career.salary_min, :delimiter => ',') %> - $<%= number_with_delimiter(career.salary_max, :delimiter => ',') %></p>
      </div>
    </div>
  </div>
  <div class="career-shortcut__body">
    <p>Interests</p>
    <ul class="career-interests">
      <% career.interests.first(3).each do |interest| %>
        <li>
          <div class="career-interest-icon">
            <%= image_tag "#{interest.home_url}", :alt => "#{interest}" %>
          </div>
          <p title="<%= interest %>">
            <%= interest %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
