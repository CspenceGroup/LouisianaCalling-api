<% skills.each do |skill, url| %>
  <div class="sort-item">
    <span class="sort-item__title" title="<%= skill %>"><%= skill%></span>
    <div class="sort-item__icon">
      <% if skill.url.present? %>
      <%= image_tag(skill.url, :alt => "interest icon")%>
      <% else %>
        <%= image_tag("", :alt => "interest icon") %>
      <% end %>
    </div>
  </div>
<% end %>
