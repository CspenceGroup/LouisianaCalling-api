<div>
    = render 'navigation/index'
    <div class="main-content">
      <section class="hero-slider">
        <div id="carousel-banner" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators carousel-dots-list">
            <li data-target="#carousel-banner" data-slide-to="0" class="active carousel-dots"></li>
            <li data-target="#carousel-banner" data-slide-to="1" class="carousel-dots"></li>
          </ol>
          <div class="carousel-inner carousel-content" role="listbox">
            <div class="carousel-item active">
              <video controls loop autoplay muted class="video-playing video-player">
                <source src="https://a0.muscache.com/airbnb/static/Belong_p1_v2.mp4">
              </video>
              <div class="carousel-caption carousel-title carousel-title-careers">
                <h1 class="hero-banner__title">Find Your Calling.</h1>
                <h1 class="hero-banner__title">Create Your Legacy.</h1>
                <div class="carousel-text carousel-text-careers">
                  <h2 class="hero-banner__text">Good news: There are tons of careers to choose from.</h2>
                  <h2 class="hero-banner__text">bad news: there are tons of careers to choose from. Let's find the right one for you.</h2>
                </div>
              </div>
            </div>
            <div class="carousel-item">
              <video controls loop autoplay muted class="video-playing video-player">
                <source src="https://a0.muscache.com/airbnb/static/Belong_p1_v2.mp4">
              </video>
              <div class="carousel-caption carousel-title carousel-title-careers">
                <h1 class="hero-banner__title">Find Your Calling.</h1>
                <h1 class="hero-banner__title">Create Your Legacy.</h1>
                <div class="carousel-text carousel-text-careers">
                  <h2 class="hero-banner__text">Good news: There are tons of careers to choose from.</h2>
                  <h2 class="hero-banner__text">bad news: there are tons of careers to choose from. Let's find the right one for you.</h2>
                </div>
              </div>
            </div>
          </div>
          <a class="left carousel-control carousel-control--beside" href="#carousel-banner" role="button" data-slide="prev">
            <span class="icon-prev" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control carousel-control--beside" href="#carousel-banner" role="button" data-slide="next">
            <span class="icon-next" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </section>
      <section class="great-jobs">
        <div class="great-jobs__lable">
          <p>Great Jobs. Right Now.</p>
        </div>
        <div class="great-jobs__container">
          <div class="great-jobs__content">
            <div class="jobs-head">
              <div class="jobs-head__name">
                <p class="jobs-head__title">Computer technician</p>
                <div class="jobs-head__icon">
                  = image_tag("careers/fire-icon.png", alt: "fire icon")
                  = image_tag("careers/fire-icon.png", alt: "fire icon")
                  = image_tag("careers/fire-icon.png", alt: "fire icon")
                  = image_tag("careers/fire-icon.png", alt: "fire icon")
                  = image_tag("careers/fire-icon.png", alt: "fire icon")
                </div>
              </div>
              <div class="jobs-head__content">
                <ul class="jobs-head__desc">
                  <li>
                    <p class="jobs-head__desc-text">Interests</p>
                    <div class="jobs-head__desc-icon">
                      = image_tag("careers/icon-arts.png", alt: "icon arts")
                      = image_tag("careers/icon-languages.png", alt: "icon languages")
                      = image_tag("careers/icon-business.png", alt: "icon business")
                    </div>
                  </li>
                  <li>
                    <p class="jobs-head__desc-text">Skills</p>
                    <div class="jobs-head__desc-icon">
                      = image_tag("careers/icon-computer.png", alt: "icon computer")
                      = image_tag("careers/icon-problem.png", alt: "icon problem")
                      = image_tag("careers/icon-technical.png", alt: "icon technical")
                    </div>
                  </li>
                </ul>
            </div>
          </div>
          <div class="great-jobs__list-icon">
            <ul class="row">
              <li class="col-md-3 list-icon__details">
                = image_tag("careers/icon-industry.png", alt: "icon industry", class:"icon-industry")
                <p>Fuel &amp; Energy</p>
                <p>Building &amp; Construcion</p>
              </li>
              <li class="col-md-3 list-icon__details">
                = image_tag("careers/icon-salary.png", alt: "icon salary", class:"icon-salary")
                <p>$42,000-$55,000</p>
              </li>
              <li class="col-md-3 list-icon__details">
                = image_tag("careers/icon-training.png", alt: "icon training", class:"icon-training")
                <p>High school diploma 2-year training</p>
              </li>
              <li class="col-md-3 list-icon__details">
                = image_tag("careers/icon-map.png", alt: "icon map", class:"icon-map")
                <p>Lafayette </p>
                <p>Alexandria</p>
                <p>New Orleans</p>
              </li>
            </ul>
          </div>
        </div>
        <div class="btn-tell-me-jobs">
          <a href="javascript:void(0)" class="btn-tell-me-jobs__link">
            = image_tag("tell-me-more.png", alt: "tell me more")
          </a>
        </div>
      </div>
      </section>
    </div>
    = render 'footer/index'
</div>
