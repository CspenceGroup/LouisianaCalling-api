.guided-form__container
  h3.main-title.shadow-main-title What type of education do you have right now?
  p What have you learned so far? Let us know and we'll find options that match your education.
  .guided-form__interest
    .guided-form__interest-item.education-item.education data-education="Currently in high school"
      .guided-form__interest-details
        .guided-form__interest-icon.guided-form-edu-icon
          = image_tag "https://s3.amazonaws.com/louisiana-calling/Test+1/Interests-Education-50x50-60x60/Education-60x60-Blue/Education-60x60-blue-CurrentlyHighSchool.png", alt: "Currently in high school", lazy: true, class: "lazy-load-icon"
        .education-icon--active
          = image_tag "https://s3.amazonaws.com/louisiana-calling/Test+1/Interests-Education-50x50-60x60/Education-60x60-White/Education-60x60-White-CurrentlyInHighSchool.png", alt: "Currently in high school", lazy: true, class: "lazy-load-icon"
      p.item-step-title title=("Currently in high school") Currently in high school
    .guided-form__interest-item.education-item.education data-education="High School Diploma/Hi-SET"
      .guided-form__interest-details
        .guided-form__interest-icon.guided-form-edu-icon
          = image_tag "https://s3.amazonaws.com/louisiana-calling/Test+1/Interests-Education-50x50-60x60/Education-60x60-Blue/Education-60x60-blue-HighSchoolDiplomaHiSet.png", alt: "High School Diploma/Hi-SET", lazy: true, class: "lazy-load-icon"
        .education-icon--active
          = image_tag "https://s3.amazonaws.com/louisiana-calling/Test+1/Interests-Education-50x50-60x60/Education-60x60-White/Education-60x60-White-HighSchoolDiplomaHiSet.png", alt: "High School Diploma/Hi-SET", lazy: true, class: "lazy-load-icon"
      p.item-step-title title=("High School Diploma/Hi-SET") High School Diploma/Hi-SET
    .guided-form__interest-item.education-item.education data-education="Training"
      .guided-form__interest-details
        .guided-form__interest-icon.guided-form-edu-icon
          = image_tag "https://s3.amazonaws.com/louisiana-calling/Test+1/Interests-Education-50x50-60x60/Education-60x60-Blue/Education-60x60-blue-Training.png", alt: "Training", lazy: true, class: "lazy-load-icon"
        .education-icon--active
          = image_tag "https://s3.amazonaws.com/louisiana-calling/Test+1/Interests-Education-50x50-60x60/Education-60x60-White/Education-60x60-White-Training.png", alt: "Training", lazy: true, class: "lazy-load-icon"
      p.item-step-title title="Training" Training
    .guided-form__interest-item.education-item.education data-education="College"
      .guided-form__interest-details
        .guided-form__interest-icon.guided-form-edu-icon
          = image_tag "https://s3.amazonaws.com/louisiana-calling/Test+1/Interests-Education-50x50-60x60/Education-60x60-Blue/Education-60x60-blue-College.png", alt: "College", lazy: true, class: "lazy-load-icon"
        .education-icon--active
          = image_tag "https://s3.amazonaws.com/louisiana-calling/Test+1/Interests-Education-50x50-60x60/Education-60x60-White/Education-60x60-White-College.png", alt: "College", lazy: true, class: "lazy-load-icon"
      p.item-step-title title="College" College


    / - educations.each do |education|
    /   .guided-form__interest-item.education-item.education data-education="#{education.to_json}"
    /     .guided-form__interest-details
    /       .guided-form__interest-icon
    /         = image_tag education.url || '', alt: "#{education}"
    /       .education-icon--active
    /         = image_tag education.url_selected || '', alt: "#{education}"
    /     p.item-step-title title="#{education}"
    /       = education

